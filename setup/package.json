{
  "name": "opcdt-mapper",
  "version": "0.1.0",
  "private": true,
  "main": ".webpack/main",
  "author": "jahollie",
  "description": "OPC-UA node to Azure Digital Twin mapper",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx ."
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "setup"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "devContentSecurityPolicy": "default-src 'self' 'unsafe-inline' data:; script-src 'self' 'unsafe-eval' 'unsafe-inline' data:; font-src 'self' 'unsafe-inline' https://static2.sharepointonline.com https://spoppe-b.azureedge.net; style-src 'self' 'unsafe-inline'",
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/electron/index.html",
                  "js": "./src/electron/renderer.ts",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/electron/preload.ts"
                  }
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@azure-iot/eslint-config": "^1.0.1",
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/plugin-webpack": "6.0.0-beta.63",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.2",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vercel/webpack-asset-relocator-loader": "1.7.0",
    "css-loader": "^6.0.0",
    "electron": "16.0.7",
    "eslint": "^8.0.1",
    "eslint-plugin-etc": "^2.0.2",
    "eslint-plugin-import": "^2.25.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "fork-ts-checker-webpack-plugin": "^6.0.1",
    "node-loader": "^2.0.0",
    "node-sass": "^7.0.1",
    "sass-loader": "^12.4.0",
    "style-loader": "^3.0.0",
    "ts-loader": "^9.2.2",
    "typescript": "~4.5.4"
  },
  "dependencies": {
    "@azure/arm-resources": "^5.0.0",
    "@azure/identity": "^2.0.1",
    "@azure/msal-browser": "^2.21.0",
    "@azure/msal-node": "^1.7.0",
    "@azure/msal-react": "^1.2.0",
    "@fluentui/font-icons-mdl2": "^8.1.19",
    "@fluentui/react": "^8.48.0",
    "@fluentui/react-hooks": "^8.3.8",
    "@monaco-editor/react": "^4.3.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^0.24.0",
    "electron-squirrel-startup": "^1.0.0",
    "immer": "^9.0.12",
    "monaco-editor": "^0.31.1",
    "monaco-languages-jq": "^1.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-json-pretty": "^2.2.0",
    "react-scripts": "5.0.0",
    "react-step-wizard": "^5.3.11",
    "web-vitals": "^2.1.2"
  }
}
