{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "strict": false,  
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "paths": {
      "*": ["node_modules/*"]
    },
  },
  "include": ["src/electron"],
  "exclude": ["node_modules", "json "]
}